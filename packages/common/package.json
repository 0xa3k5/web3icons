{
  "name": "@web3icons/common",
  "homepage": "https://tokenicons.io",
  "description": "Web3 icons' shared library, serves metadata and types and some utils.",
  "keywords": [
    "crypto icons",
    "cryptocurrency",
    "ethereum logos",
    "cryptocurrency logos",
    "crypto logos",
    "svg crypto icons",
    "coin icons"
  ],
  "version": "0.0.2-alpha.0",
  "private": false,
  "author": "0xa3k5",
  "license": "MIT",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/cjs/**/*",
    "dist/esm/**/*",
    "dist/types/**/*",
    "dist/metadata/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./metadata": {
      "import": "./dist/esm/metadata/index.js",
      "require": "./dist/cjs/metadata/index.js"
    },
    "./metadata/tokens": {
      "import": "./dist/esm/metadata/tokens.js",
      "require": "./dist/cjs/metadata/tokens.js"
    },
    "./metadata/networks": {
      "import": "./dist/esm/metadata/networks.js",
      "require": "./dist/cjs/metadata/networks.js"
    },
    "./metadata/wallets": {
      "import": "./dist/esm/metadata/wallets.js",
      "require": "./dist/cjs/metadata/wallets.js"
    }
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xa3k5/web3icons.git",
    "directory": "packages/common"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run build:types && tsup && bun run post-build",
    "pre-build": "(cd ../utils && bun run pre-build:core)",
    "build:types": "bun run tsc --outDir dist/types --declarationDir dist/types --declaration true",
    "post-build": "bun run lint && bun run format",
    "lint": "eslint ./src --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,md,json}\" --log-level error"
  },
  "devDependencies": {
    "bun-types": "latest",
    "tsup": "^8.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
